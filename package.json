{
  "name": "nethaji-empowerment-initiative",
  "version": "1.0.0",
  "description": "Progressive Web App for rural children's education and health program",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:api": "playwright test tests/api",
    "test:pwa": "playwright test tests/pwa",
    "test:all": "npm run test && npm run test:e2e",
    "db:migrate": "npm run db:migrate --workspace=apps/backend",
    "db:seed": "npm run db:seed --workspace=apps/backend",
    "db:studio": "npm run db:studio --workspace=apps/backend",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": [
    "education",
    "nonprofit",
    "pwa",
    "offline-first",
    "india"
  ],
  "author": "Nethaji Empowerment Initiative",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "playwright": "^1.56.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  }
}
